<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takaisin valikkoon"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:id="@+id/rows"
            android:layout_width="530dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/r0c0"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r0c1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r0c2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r0c3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r0c4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/r1c0"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r1c1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r1c2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r1c3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r1c4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/r2c0"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r2c1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r2c2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/game_grid_border" />

                <View
                    android:id="@+id/r2c3"
                    android:layout_width="72dp"
